{
    "name": "mezzio/mezzio-twigrenderer",
    "description": "Twig integration for Mezzio",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "http",
        "middleware",
        "psr",
        "psr-7",
        "twig"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio-twigrenderer/",
        "issues": "https://github.com/mezzio/mezzio-twigrenderer/issues",
        "source": "https://github.com/mezzio/mezzio-twigrenderer",
        "rss": "https://github.com/mezzio/mezzio-twigrenderer/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev",
            "dev-develop": "1.3-dev"
        }
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "container-interop/container-interop": "^1.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "mezzio/mezzio-helpers": "^1.1 || ^2.0 || ^3.0",
        "mezzio/mezzio-router": "^1.3.2 || ^3.0",
        "mezzio/mezzio-template": "^1.0.4",
        "twig/twig": "^1.26"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "malukenho/docheader": "^0.1.5",
        "phpunit/phpunit": "^5.7"
    },
    "suggest": {
        "aura/di": "3.0.*@beta to make use of Aura.Di dependency injection container",
        "laminas/laminas-servicemanager": "^2.5 to use laminas-servicemanager for dependency injection",
        "mouf/pimple-interop": "^1.0 to use Pimple for dependency injection"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\Twig\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@license-check",
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "license-check": "docheader check src/ test/",
        "test": "phpunit"
    },
    "replace": {
        "zendframework/zend-expressive-twigrenderer": "self.version"
    }
}
